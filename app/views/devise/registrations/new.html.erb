<div class='col text-center'>
  <h2>新規登録</h2>
</div>
<div class='border col-7 mx-auto'>
  <div class="form-horizontal" role="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group"> 
        <%= f.label :ニックネーム, :class => "col-sm-3 control-label"%><br />
        <%= f.text_field :nickname , class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, :class => "col-sm-3 control-label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, :class => "col-sm-3 control-label"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認, :class => "col-sm-3 control-label"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: 'form-control'%>
      </div>
      <div class='text-center'>
        <div class="form-group">
          <%= f.submit "登録", class: 'btn btn-primary w-50'%>
        </div>
      </div>
    <% end %>
  </div>
</div>

